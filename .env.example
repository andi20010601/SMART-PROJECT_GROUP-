# Customer Intelligence Dashboard - Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE CONFIGURATION (Required)
# ===========================================
# MySQL/MariaDB connection string
# Format: mysql://user:password@host:port/database
DATABASE_URL=mysql://root:password@localhost:3306/customer_intelligence

# ===========================================
# AUTHENTICATION (Required)
# ===========================================
# JWT secret for session tokens (generate a random 32+ character string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# ===========================================
# AI INTEGRATION (Optional)
# ===========================================
# OpenAI API key for AI analysis features
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key

# OpenAI API base URL (optional, for custom endpoints or Azure OpenAI)
# Default: https://api.openai.com/v1
OPENAI_API_BASE=https://api.openai.com/v1

# ===========================================
# APPLICATION SETTINGS (Optional)
# ===========================================
# Application title shown in the UI
VITE_APP_TITLE=Customer Intelligence Dashboard

# Application logo URL (optional)
VITE_APP_LOGO=

# Server port (default: 3000)
PORT=3000

# Node environment
NODE_ENV=development

# ===========================================
# FILE STORAGE (Optional - for file uploads)
# ===========================================
# S3-compatible storage configuration
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# S3_BUCKET=your-bucket-name
# S3_ENDPOINT=https://s3.amazonaws.com
